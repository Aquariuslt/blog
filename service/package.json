{
  "name": "@blog/service",
  "version": "6.26.250",
  "description": "core build service",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild:service:prod": "yarn run build:service",
    "build:service:prod": "cross-env NODE_ENV=production node -r tsconfig-paths/register -r ts-node/register dist/main",
    "prebuild:service": "yarn clean",
    "build:service": "nest build",
    "start:service": "nest start",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@blog/api": "^6.26.250",
    "@blog/article": "^6.26.250",
    "@blog/common": "^6.26.250",
    "@blog/config": "^6.26.250",
    "@blog/markdown": "^6.26.250",
    "@blog/pwa": "^6.26.250",
    "@blog/router": "^6.26.250",
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@nestjs/platform-express": "7.6.18",
    "@nestjs/serve-static": "2.2.2",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cosmiconfig": "7.0.0",
    "date-fns": "2.23.0",
    "fancy-log": "1.3.3",
    "fs-extra": "9.1.0",
    "get-port": "5.1.1",
    "lodash": "4.17.21",
    "log4js": "6.3.0",
    "puppeteer": "7.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.7"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "8.0.2",
    "@nestjs/testing": "7.6.18",
    "@types/express": "4.17.13",
    "@types/fancy-log": "1.3.1",
    "@types/fs-extra": "9.0.12",
    "@types/jest": "26.0.24",
    "@types/lodash": "4.14.172",
    "@types/node": "14.17.9",
    "@types/supertest": "2.0.11",
    "cross-env": "7.0.3",
    "jest": "26.6.3",
    "supertest": "6.1.4",
    "ts-jest": "26.5.6",
    "ts-node": "10.1.0",
    "tsc-watch": "4.4.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage"
  }
}
